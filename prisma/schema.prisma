generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updateAt  DateTime  @updatedAt
  projects  Project[]
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  deadline    DateTime
  category    String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
  task        Task[]
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  priority    Int
  duration    Int?
  taskDate    DateTime
  deadline    DateTime
  category    String
  projectId   Int      @unique

  project Project @relation(fields: [projectId], references: [id])
}
