generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int    @id @default(autoincrement())
  login    String @unique
  email    String @unique
  password String
  task     Task?
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  priority    Int
  duration    Int?
  startDate   DateTime
  endDate     DateTime
  category    String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
}
